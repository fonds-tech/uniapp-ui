{
  "env": {},
  "permissions": {
    "allow": [
      "Bash(chmod:*)",
      "Bash(*task-analysis.sh*)",
      "Bash(pnpm run *)",
      "Bash(./.claude/hooks/*)",
      "Skill(*)",
      "mcp__serena__*",
      "mcp__desktop-commander__list_directory",
      "mcp__auggie-mcp__codebase-retrieval"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/stop-notify.sh"
          }
        ]
      }
    ],
    "PreToolUse": [],
    "PostToolUse": [],
    "Notification": [],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/task-analysis.sh"
          }
        ]
      }
    ]
  },
  "mcpServers": {},
  "contextProviders": [],
  "cleanupTempFilesOnExit": true,
  "enableTerminalShiftEnter": false
}
